{
  "// ============================================": "VERIFIED MCP TEMPLATE",
  "// LAST VERIFIED": "2025-09-16",
  "// INSTRUCTIONS": [
    "1. Copy needed servers to your project's .mcp.json",
    "2. Replace placeholder values (YOUR_KEY_HERE, etc.)",
    "3. Test each server before using in production",
    "4. Some servers use 'npx', others use 'uvx' (Python)"
  ],

  "mcpServers": {
    "// ========== VERIFIED & WORKING ==========": {},

    "playwright-microsoft": {
      "command": "uvx",
      "args": ["@microsoft/mcp-server-playwright"],
      "// status": "✅ Verified - Microsoft official"
    },

    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "PATH_TO_ALLOW"],
      "// status": "✅ Verified - Works with npx",
      "// note": "Replace PATH_TO_ALLOW with actual directory path"
    },

    "sqlite": {
      "command": "uvx",
      "args": ["@modelcontextprotocol/server-sqlite", "--db-path", "path/to/database.db"],
      "// status": "⚠️ Needs testing",
      "// note": "Requires database file path"
    },

    "supabase": {
      "command": "uvx",
      "args": ["@supabase/mcp"],
      "env": {
        "SUPABASE_URL": "YOUR_SUPABASE_URL",
        "SUPABASE_SERVICE_KEY": "YOUR_SERVICE_KEY"
      },
      "// status": "⚠️ Needs API keys to test"
    },

    "// ========== COMMUNITY SERVERS ==========": {},

    "puppeteer-mcp": {
      "command": "npx",
      "args": ["puppeteer-mcp-server"],
      "// status": "✅ Available on npm",
      "// note": "Community implementation"
    },

    "// ========== DESKTOP AUTOMATION ==========": {},

    "desktop-commander": {
      "command": "cmd",
      "args": [
        "/c", "npx", "-y", "@smithery/cli@latest", "run",
        "@wonderwhy-er/desktop-commander",
        "--key", "YOUR_KEY",
        "--profile", "YOUR_PROFILE"
      ],
      "// status": "✅ Works with Smithery key",
      "// note": "Requires Smithery account"
    },

    "// ========== SDK (Not servers, but useful) ==========": {},

    "mcp-sdk": {
      "// package": "@modelcontextprotocol/sdk",
      "// status": "✅ Core SDK for building MCP servers",
      "// install": "npm install @modelcontextprotocol/sdk"
    }
  },

  "// TESTING COMMANDS": {
    "test-filesystem": "npx @modelcontextprotocol/server-filesystem .",
    "test-playwright": "uvx @microsoft/mcp-server-playwright",
    "test-puppeteer": "npx puppeteer-mcp-server"
  },

  "// COMMON ISSUES": [
    "1. 'uvx' requires Python with uv installed",
    "2. 'npx' works for JavaScript/TypeScript servers",
    "3. Some servers need environment variables",
    "4. Check GitHub for latest server list: https://github.com/modelcontextprotocol/servers"
  ]
}